<div class="container">
  <h1>Add Bookmark</h1>
  <div class="col-6">
    <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit "Add bookmark", class: 'btn btn-primary'%>
    <% end %>
  </div>
  <div class="row mt-3">
    <%= link_to lists_path do %>
      <p><i class="fa-solid fa-rotate-left "></i>Back to lists</p>
    <% end %>
  </div>
</div>
